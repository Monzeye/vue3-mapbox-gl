{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "baseUrl": "./",
    "outDir": "dist",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    // "isolatedModules": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "lib": ["ESNext", "DOM"],
    "noImplicitAny": true,
    "skipLibCheck": true,
    "types": [
      "vite/client",
      "../types/mabbox.d.ts",
      "../types/mapboxComponent.d.ts"
    ],
    "paths": {
      "/@/*": ["./src/*"],
      "@/*": ["../lib/*"],
      "#/*": ["../types/*"],
      "vue3-mapbox-gl": ["../lib"]
    }
  },
  "include": [
    "dist/**/*.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "types/**/*.d.ts",
    "types/**/*.ts",
    "vite.config.ts"
  ],
  "exclude": ["node_modules"]
}
